{
  "devDependencies": {
    "electron": "^1.4.5",
    "electron-builder": "^22.1.0",
    "gulp": "*",
    "gulp-autoprefixer": "*",
    "gulp-include": "*",
    "gulp-sass": "*"
  },
  "build": {
    "compression": "maximum",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        {
          "from": "build/win",
          "to": ".",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false
    }
  }
}
