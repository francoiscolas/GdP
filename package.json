{
  "devDependencies": {
    "electron": "7",
    "electron-builder": "^22.1.0",
    "gulp": "*",
    "gulp-autoprefixer": "*",
    "gulp-include": "*",
    "gulp-sass": "*"
  },
  "build": {
    "compression": "maximum",
    "linux": {
      "target": [
        {"target": "deb"},
        {"target": "tar.gz"},
        {"target": "AppImage"}
      ]
    },
    "deb": {
      "depends": ["imagemagick", "libreoffice-impress"]
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        {
          "from": "build/win32",
          "to": ".",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "mac": {
      "target": "dmg",
      "extraResources": [
        {
          "from": "build/darwin",
          "to": ".",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}
